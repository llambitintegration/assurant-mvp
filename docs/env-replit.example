# ============================================================================
# WORKLENZ BACKEND - REPLIT SECRETS CONFIGURATION
# ============================================================================
# These values should be set as Replit Secrets (not in a .env file)
# Replit auto-populates REPLIT_DOMAINS for CORS handling
# ============================================================================

# =============================================================================
# ENVIRONMENT MODE (Replit auto-detects, but can be explicit)
# =============================================================================
# USE_DOCKER is NOT set on Replit (or set to false)
# USE_DOCKER=false
NODE_ENV=production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
SESSION_NAME=worklenz.sid
SESSION_SECRET="your_secure_session_secret_here"
COOKIE_SECRET="your_secure_cookie_secret_here"

# =============================================================================
# CORS CONFIGURATION (Replit)
# =============================================================================
# REPLIT_DOMAINS is auto-set by Replit - CORS origins are extracted from it
# Set SERVER_CORS to * for broad compatibility or your specific domain
SOCKET_IO_CORS=*
SERVER_CORS=*

# =============================================================================
# DATABASE CONFIGURATION (NeonDB recommended for Replit)
# =============================================================================
DATABASE_URL=postgresql://your-user:your-password@your-project.neon.tech/your-database?sslmode=require
DB_SSL_MODE=require
DB_MAX_CLIENTS=20

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Google OAuth - Update URLs for your Replit domain
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_CALLBACK_URL="https://your-project.replit.app/secure/google/verify"
LOGIN_FAILURE_REDIRECT="https://your-project.replit.app/auth/authenticating"
LOGIN_SUCCESS_REDIRECT="https://your-project.replit.app/auth/authenticating"

# =============================================================================
# FRONTEND URL (Replit)
# =============================================================================
# Set to your Replit public URL (port 80 is mapped to 5000)
FRONTEND_URL=https://your-project.replit.app
HOSTNAME=your-project.replit.app

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Use a cloud storage provider for Replit (S3, Azure, etc.)
STORAGE_PROVIDER=s3
S3_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
S3_URL="https://s3.amazonaws.com"
S3_ACCESS_KEY_ID="your_aws_access_key"
S3_SECRET_ACCESS_KEY="your_aws_secret_key"

# =============================================================================
# AWS SES (Email)
# =============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"

# =============================================================================
# CRON JOBS
# =============================================================================
ENABLE_EMAIL_CRONJOBS=true
ENABLE_RECURRING_JOBS=true
RECURRING_JOBS_INTERVAL="0 11 */1 * 1-5"

# =============================================================================
# MISCELLANEOUS
# =============================================================================
USE_PG_NATIVE=false
CONTACT_US_EMAIL=support@example.com

# =============================================================================
# PRE-SEED ADMIN USER
# =============================================================================
PRESEED_ADMIN_USER=TRUE
ADMIN_USER=admin@llambit.io
ADMIN_PASSWORD=Password123!
ADMIN_NAME=Llambit
ADMIN_TEAM_NAME=LlambitIntegration
ADMIN_TIMEZONE=UTC

# =============================================================================
# VITE FRONTEND VARIABLES (optional - for explicit override)
# =============================================================================
# These are optional on Replit since the Vite proxy handles routing
# VITE_API_URL is left empty so relative URLs work with the Vite proxy
# VITE_API_URL=
# VITE_SOCKET_URL=


